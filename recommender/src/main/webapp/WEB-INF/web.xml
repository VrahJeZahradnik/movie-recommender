<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>Movie Recommender System</display-name>
	<description>
	This is a web application used to try out a movie recommender system.
    </description>

	<servlet>
        <servlet-name>MovieRecommender</servlet-name>
        <servlet-class>com.recommender.MovieRecommender</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>MovieRecommender</servlet-name>
        <url-pattern>/recommender</url-pattern>
    </servlet-mapping>
</web-app>
